<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/primary_dark_material_dark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:baselineAligned="false"
        android:weightSum="1"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:background="@color/primary_dark_material_dark"
        android:padding="5dp"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/techButton"
            android:layout_below="@+id/mansionButton"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tech"
            android:layout_weight="0.13"
            android:layout_marginBottom="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sublime Party (8/29/2015)\nWe hired Sublime (the band) to play for this event celebrating Sublime (the text editor)\n8:00pm - 11:00pm"
            android:id="@+id/textView"
            android:textColor="#fff8ff"
            android:layout_weight="0.08"
            android:textSize="12dp" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/mansionButton"
            android:background="@drawable/mansion"
            android:cropToPadding="true"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NICKELBACK &amp; BUBBLEWRAP (8/29/2015)\nFree bubblewrap. Free nickelback. Free pizza, too.\n8:00pm-11:00pm"
            android:id="@+id/textView2"
            android:layout_weight="0.13"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>


</RelativeLayout>

